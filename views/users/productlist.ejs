                                                                            <img <% if(product.quantity ==0){ %> style="opacity: 50%;" <% } %>   src="public/assets/images/productImages/<%= product.productImages[0] %>"
                                                                                alt="Product image"
                                                                                class="product-image ">
                                                                        </a>
                                                                        <% if(product.quantity !== 0){ %>       
                                                                            <div class="product-action-vertical">
                                                                                <a class="btn-product-icon btn-wishlist btn-expandable" data-product-id="<%= product._id %>">
                                                                                    <span>add to wishlist</span>
                                                                                </a>
                                                                            </div>
                                                                            
                                                                        <div class="product-action">
                                                                            <button type="button" class="btn btn-outline-primary-2 addToCartBtn" data-product-id="<%= product._id %>">
                                                                                <i class="fa-solid fa-cart-plus"></i>
                                                                                Add to cart
                                                                            </button>
                                                                        </div>
                                                                        <% } %>
                                                                          
                                                           
