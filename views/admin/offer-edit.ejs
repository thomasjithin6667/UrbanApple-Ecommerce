    <%- include('../partials/ecomAdminAside') %>
        <main class="main-wrap">
            <%- include('../partials/ecomAdminHeader') %>
                <section class="content-main">
                    <div class="content-header">
                        <div>
                            <h2 class="content-title card-title">Edit Offer</h2>
                            <p>Add, edit or delete an Offer</p>
                            <div style="height: 15px;" class="div">
                                <% if (typeof message !=='undefined' ){ %>
                                    <% if (typeof error==='undefined' ) { %>
                                        <p style="color: rgb(0, 95, 219);">
                                            <%= message %>
                                        </p>
                                        <% } else { %>
                                            <p style="color: red;">
                                                <%= error %>
                                            </p>
                                            <% } %>
                                                <% } %>

                            </div>
                        </div>


                    </div>
                    <form action="/admin/offer-edit?id=<%=offer._id %>" method="POST">






                        <div class="card col">
                            <div class="card-body ">
                                <div class="row">
                                    <div class="col-6">
                                        <label class="form-label" for="name">Name:</label>
                                        <input value="<%=offer.name %>" class="form-control" type="text" id="name" name="name" required><br>

                                        <label class="form-label" for="discountOn">Discount On:</label>
                                        <select class="form-select" id="discountOn" name="discountOn" >
                                            <option value="product" <%= offer.discountOn === 'product' ? 'selected' : '' %>>Product</option>
                                            <option value="category" <%= offer.discountOn === 'category' ? 'selected' : '' %>>Category</option>
                                        </select><br>
                                        
                                        <div id="categorySelect">

                                            <label class="form-label">Category</label>
    
    
                                            <select name="discountedCategory" class="form-select">
                                                <option value="" selected disabled>Select a category</option>
                                                <% if (category && category.length> 0) { %>
                                                    <% for (let i=0; i < category.length; i++) { %>
                                                        <option value="<%= category[i]._id%>">
                                                            <%=category[i].category %>
                                                        </option>
                                                        <% } %>
                                                            <% } else { %>
                                                                <option value="" disabled>No products available</option>
                                                                <% } %>
                                            </select><br>
                                            </div>
    
                                        
    
    
                                            <div id="productSelect">
                                            <label class="form-label" class="form-label">Product</label>
    
    
                                            <select name="discountedProduct" class="form-select">
                                              
                                                <option value="" selected disabled>Select a product</option>
                                                <% if (product && product.length> 0) { %>
                                                    <% for (let i=0; i < product.length; i++) { %>
                                                        <% if (offer.discountedProduct.name==product[i].name) { %>
                                                            <option value="<%= product[i]._id %>" selected>
                                                                <%= product[i].name %>
                                                            </option>
                                                            <% } else { %>
                                                                <option value="<%= product[i]._id %>">
                                                                    <%= product[i].name %>
                                                                </option>
                                                                <% } %>
                                                                    <% } %>
                                                                        <% } else { %>
                                                                            <option value="" disabled>No products
                                                                                available</option>
                                                                            <% } %>
                                            </select><br>
                                            </div>

                                            <label class="form-label" for="discountType">Discount Type:</label>
                                            <select class="form-select" id="discountType" name="discountType" >
                                                <option value="percentage" <%= offer.discountType === 'percentage' ? 'selected' : '' %>>Percentage</option>
                                                <option value="fixed Amount" <%= offer.discountType === 'fixed Amount' ? 'selected' : '' %>>Fixed Amount</option>
                                            </select><br>

                           









                                    </div>
                                    <div class="col-md-6">
                                        
                                        <label class="form-label" for="discountValue">Discount Value:</label>
                                        <input class="form-control" type="number" id="discountValue" name="discountValue" value="<%= offer.discountValue %>" required><br>

                                        <label class="form-label" for="maxRedeemableAmt">Max Redeemable Amount:</label>
                                        <input class="form-control" type="number" id="maxRedeemableAmt" name="maxRedeemableAmt" value="<%= offer.maxRedeemableAmt %>" required><br>

                                        <label class="form-label" for="startDate">Start Date:</label>
                                        <input class="form-control" value="<%= startDate %>" type="date" id="startDate" name="startDate"
                                            required><br>

                                        <label class="form-label" for="endDate">End Date:</label>
                                        <input class="form-control" value="<%= endDate %>" type="date" id="endDate" name="endDate"
                                            required><br>

                                      
                                  
                                  
                                    </div>




                                </div>
                                <button type="submit" class="btn btn-primary">Edit Offer</button>
                    </form>
