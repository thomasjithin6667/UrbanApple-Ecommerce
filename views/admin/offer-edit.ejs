<script>
    $(document).ready(function() {
        $('#discountOn').on('change', function() {
            var selectedValue = $(this).val();

            if (selectedValue === 'category') {
                $('#productSelect').hide();
                $('#categorySelect').show();
            } else if (selectedValue === 'product') {
                $('#categorySelect').hide();
                $('#productSelect').show();
            }
        });

        // Initialize visibility based on initial selection
        var initialSelectedValue = $('#discountOn').val();
        if (initialSelectedValue === 'category') {
            $('#productSelect').hide();
            $('#categorySelect').show();
        } else if (initialSelectedValue === 'product') {
            $('#categorySelect').hide();
            $('#productSelect').show();
        }
    });
</script>