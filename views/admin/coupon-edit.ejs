<body>
    <div class="screen-overlay"></div>
    <%- include('../partials/ecomAdminAside') %>
        <main class="main-wrap">
            <%- include('../partials/ecomAdminHeader') %>
                <section class="content-main">
                    <div class="content-header">
                        <div>
                            <h2 class="content-title card-title">Edit Coupon </h2>
                            <p>Add, edit or delete a Product coupon</p>
                            <div style="height: 15px;" class="div">
                                <% if (typeof message !=='undefined' ){ %>
                                    <% if (typeof error==='undefined' ) { %>
                                        <p style="color: rgb(0, 95, 219);">
                                            <%= message %>
                                        </p>
                                        <% } else { %>
                                            <p style="color: red;">
                                                <%= error.message %>
                                            </p>
                                            <% } %>
                                                <% } %>

                            </div>
                        </div>


                    </div>



                    <div class="card col-6">
                        <div class="card-body ">
                            <div class="row">
                                <div class="col-md">
                           

                                    <form id="couponForm" action="/admin/editCoupon?couponId=<%= coupon._id %>" method="post">
                                        <div class="form-group">
                                            <label   class="form-label mt-3" for="couponCode">Coupon Code</label>
                                            <input type="text" value="<%= coupon.code %>" class="form-control" id="couponCode" name="couponCode" required>
                                        </div>
                                        <div class="form-group">
                                            <label  class="form-label mt-3"  for="discount">Discount (%)</label>
                                            <input type="number" value="<%= coupon.discount %>" class="form-control" id="discount" name="discount" required>
                                        </div>
                                        <div class="form-group">
                                            <label  class="form-label mt-3"  for="limit">Limit</label>
                                            <input type="number" value="<%= coupon.limit %>" class="form-control" id="limit" name="limit" required>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label class="form-label mt-3" for="discountType">Discount Type:</label>
                                            <select class="form-select" id="discountType" name="discountType" >
                                                <option value="fixed" <%= coupon.type === 'fixed' ? 'selected' : '' %>>Fixed</option>
                                                <option value="percentage" <%= coupon.type === 'percentage' ? 'selected' : '' %>>Percentage</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label  class="form-label mt-3"  for="expiryDate">Expiry Date</label>
                                            <input value="<%= endDate %>"  type="date" class="form-control" id="expiryDate" name="expiryDate" required>
                                        </div>
                                        <div class="form-group">
                                            <label  class="form-label mt-3"  for="limit">Min Cart Amount</label>
                                            <input  value="<%= coupon.maxRedeemableAmt %>"  type="number" class="form-control" id="limit" name="minCartAmt" required>
                                        </div>
                                        <div class="form-group">
                                            <label  class="form-label mt-3"  for="limit">Max Redeemable Amount</label>
                                            <input value="<%= coupon.minCartAmt %>"  type="number" class="form-control" id="limit" name="maxRedeemableAmt" required>
                                        </div>
                                        <button type="submit" class="btn btn-primary mt-50">Edit Coupon</button>
                                    </form>



                                </div>

                            </div>
                        </div> <!-- card body .// -->
                    </div> <!-- card .// -->
                </section> <!-- content-main end// -->

