<body>
    <div class="screen-overlay"></div>
    <%- include('../partials/ecomAdminAside') %>
    <main class="main-wrap">
        <%- include('../partials/ecomAdminHeader') %>
        <section class="content-main">
                    
         
            <div class="content-header">
               
                <div>
                    <h2 class="content-title card-title">Edit Category  -<%= categories.category %> </h2>
                    <p>Add, edit or delete a category</p>
                </div>
             
            </div>
            <div class="div d-flex">

            
            <div class="card col-6 "  >
                
                <div class="card-body ">
                    <div class="row">
                        <div class="col-md">
                            <form action="" method="post" enctype="multipart/form-data">
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Category</label>
                                    <input type="text" placeholder="Type here" class="form-control" value="<%=categories.category%>"  name="category"/>
                                </div>
                                <input type="hidden" name="category_id" value="<%=categories._id%>"  required>
                        
                                <div class="mb-4">
                                    <label class="form-label">Description</label>
                                    <input  class="form-control" value="<%=categories.description%>" name="description"></input>
                                </div>
                                <div class="mb-4">
                                    <label for="product_slug" class="form-label">image</label>
                                    <input type="file" value="<%=categories.image%>"  class="form-control" name="categoryImage"  />
                                </div>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary"> Apply changes</button>
                                </div>
                                <% if(typeof message !=='undefined' ){ %>
                                    <p style="color: green;">
                                        <%=message%>
                                    </p>
                                    <% } %>
                            </form>
                        </div>
                      
                    </div> 
                    
                </div> 
               
                
            </div> <!-- card .// -->
            <div class="card col-4  ms-3 d-flex align-items-center justify-content-center ">
                <img   src="assets/images/categoryImages/<%= categories.image %>" alt="avatar"
         style="width: 120px;" >
                
                
            </div>
        </div>
        </section> <!-- content-main end// -->
    
