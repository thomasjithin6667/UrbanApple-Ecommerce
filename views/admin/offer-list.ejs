<body>
    <div class="screen-overlay"></div>
    <%- include('../partials/ecomAdminAside') %>
    <main class="main-wrap">
        <%- include('../partials/ecomAdminHeader') %>
        <section class="content-main">
          <div class="content-header">
            <div>
                <h2 class="content-title card-title">Offers</h2>
                <p>Add, edit or delete an Offer</p>
            </div>


            <div>
                <a href="/admin/offer-add" class="btn btn-primary"><i
                        class="text-muted material-icons md-post_add"></i>Create </a>
            </div>


        </div>

            <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <div class="table-responsive">
                        <table class="table align-middle table-nowrap mb-0">
                            <thead class="table-light">
                                <tr>
                             
                                    <th class="align-middle" scope="col">Sl No</th>
                                    <th class="align-middle" scope="col">Discount Code</th>
                                    <th class="align-middle" scope="col">Discount Type</th>
                                    <th class="align-middle" scope="col">Discount Value</th>
                                    <th class="align-middle" scope="col">Start Date</th>
                                    <th style="width: 150px;" class="align-middle" scope="col">End Date</th>
                                    <th class="align-middle" scope="col">Status</th>
                                    <th class="align-middle" scope="col">Actions</th>
                             
                                </tr>
                            </thead>
                            <tbody>
                                <% offer.forEach((offers , index)=> { %>
                                    
                     
                                    <tr>
                                        <td>
                                            <%= index + 1 %>
                                                
                                              
                                            
                                        </td>
                                        <td>
                                            <%= offers.name %>
                                      
                                        </td>
                                        <td>
                                            <%= offers.discountType %>
                                      
                                        </td>
                                        <td>
                                            <%= offers.discountValue%>
                                        </td>
                                   
                                        <td>
                                            <%= offers.startDate.toDateString() %>
                                        </td>
                                        <td>
                                            <%= offers.endDate.toDateString() %>
                                        </td>
                                        <td style="width: 90px;">
                                             
                                            <% if (offers.isActive) { %><span class="badge badge-pill badge-soft-primary">Listed</span><% } else { %><span class="badge badge-pill badge-soft-danger">Unlisted</span>
                                                <% } %>
                                        </td>
                                      
                                      
                                      
                                        <td class="text-end">
                                            <div class="dropdown ">
                                                <a href="#" data-bs-toggle="dropdown"
                                                    class="btn btn-light rounded btn-sm font-sm"> <i
                                                        class="material-icons md-more_horiz"></i> </a>
                                                <div class="dropdown-menu">
                                                    <a class="dropdown-item" >
                                                        <% if (offers.isActive) { %>
                                                            <a href="/admin/unlist-offer?id=<%= offers._id.toString() %>">
                                                             
                                                               <p class="text-danger ms-4 font-xs">Unlist</p>
                                                             
                                                            </a>
                                                          <% } else { %>
                                                            <a href="/admin/unlist-offer?id=<%= offers._id.toString() %>">
                                                              
                                                                <p class="text-primary ms-4 font-xs">List</p>
                                                             
                                                            </a>
                                                          <% } %>
                                                        
                                                       </a>
                                                    <a class="dropdown-item font-xs" href="/admin/offer-edit?id=<%=offers._id %>">Edit info</a>
                                              
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                
                            
                        </table>
                    </div>
                </div> <!-- table-responsive end// -->
            </div>
        </div>
       
        </section> <!-- content-main end// -->

