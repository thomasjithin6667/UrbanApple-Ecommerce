<body>
    <main>

        <section class="content-main mt-80 mb-80">
            <div class="card mx-auto card-login" style="border-radius: 0;">
                <div class="card-body " style="border-radius: 0;">
                    <h4 class="card-title mb-4">Admin Login</h4>
                    <form action="" method="POST">
                        <div class="mb-3">
                            <input class="form-control" placeholder="Username or email" type="text" name="email">
                        </div> <!-- form-group// -->
                        <div class="mb-3">
                            <input class="form-control" placeholder="Password" type="password" name="password">
                        </div> <!-- form-group// -->
                        <div class="mb-3">
                            <a href="#" class="float-center font-sm text-muted m-2">Forgot password?</a>

                            <div id="invalid" style="height: 50px;">
                                <% if(typeof message !=='undefined' ){ %>
                                    <p class="text-center pt-3 " style="color: red; font-size: 13px" id="errorMessage">
                                        <%= message %>
                                    </p>

                                    <% } %>
                            </div>


                        </div> <!-- form-group form-check .// -->
                        <div class="mb-4">
                            <input type="submit" value="Login" class="btn btn-primary w-100">  
                        </div> <!-- form-group// -->
                    </form>

                </div>
            </div>
        </section>

    </main>
