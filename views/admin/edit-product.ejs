<body>
    <div class="screen-overlay"></div>
    <%- include('../partials/ecomAdminAside') %>
   
    <main class="main-wrap">
        <%- include('../partials/ecomAdminHeader') %>
        <section class="content-main">
            <form form action="" method="POST" enctype="multipart/form-data">
                <input type="hidden" name="productId" value="<%=products._id%>"  required>
            <div class="row">
                <div class="col-9">
                    <div class="content-header">
                        <h2 class="content-title"> Edit Product- <%= products.name %></h2>
                        
                    </div>
                </div>
                <% if (typeof message !== 'undefined' && message) { %>
                    <p style="color: rgb(0, 125, 209);" id="message"><%= message %></p>
                <% } %>
                
                
                <div class="card mb-4">
                    <div class="card-header">
                        <h5>Media</h5>
                    </div>
                    <div class="card-body d-flex">
    
                        <div class="m-4">
                            <label for="image1">Image 1:</label>
                            <img id="imgView<%= 0 %>" src="public/assets/images/productImages/<%= products.productImages[0] %>" alt=""><br>
                            <div class="d-flex justify-content-around">
                            <label class="edit-icon" for="fileInput1">
                          
                                <i class="fa fa-pencil" aria-hidden="true"></i> Edit
                            </label>
                            <label class="edit-icon text-danger">
                                <a href="/admin/productimagedelete?productId=<%= products._id %>&imageIndex=0"  class="text-muted"> <i class="fa fa-close " aria-hidden="true"></i> Delete</a>
                            </label>

                        </div>
                            <input id="fileInput1" class="form-control hidden" name="image1" type="file" onchange="viewImage(event, 0)" value="<%= products.productImages[0] %>">
                        </div>
                        <br>
                        <div class="m-4 ">
                        <label for="image2">Image 2:</label>
                        <img id="imgView<%= 1 %>" src="public/assets/images/productImages/<%= products.productImages[1] %>" alt="">
                        <div class="d-flex justify-content-around">
                            <label class="edit-icon" for="fileInput2">
                          
                                <i class="fa fa-pencil" aria-hidden="true"></i> Edit
                            </label>
                            <label class="edit-icon text-danger" >
                                <a href="/admin/productimagedelete?productId=<%= products._id %>&imageIndex=1"  class="text-muted"> <i class="fa fa-close " aria-hidden="true"></i> Delete</a>
                            </label>
                        </div>

                        <input id="fileInput2"  class="form-control hidden" name="image2"  type="file" onchange="viewImage(event,1)" value="<%= products.productImages[1] %>">
                    </div>
                        <br>
                        <div class="m-4 ">
                        <label for="image3">Image 3:</label>
                        <img id="imgView<%= 2 %>" src="public/assets/images/productImages/<%= products.productImages[2] %>" alt="">
                        <div class="d-flex justify-content-around">
                            <label class="edit-icon" for="fileInput3">
                          
                                <i class="fa fa-pencil" aria-hidden="true"></i> Edit
                            </label>
                            <label class="edit-icon text-danger" >
                                <a href="/admin/productimagedelete?productId=<%= products._id %>&imageIndex=2"  class="text-muted"> <i class="fa fa-close " aria-hidden="true"></i> Delete</a>
                            </label>
                        </div>
                        <input id="fileInput3" class="form-control hidden" name="image3"  type="file" onchange="viewImage(event,2)" value="<%= products.productImages[2] %>">
                    </div>
                        <br>
                        <div class="m-4 ">
                        <label for="image4">Image 4:</label>
                        <img id="imgView<%= 3 %>" src="public/assets/images/productImages/<%= products.productImages[3] %>" alt="">
                        <div class="d-flex justify-content-around">
                            <label class="edit-icon" for="fileInput4">
                          
                                <i class="fa fa-pencil" aria-hidden="true"></i> Edit
                            </label>
                            <label class="edit-icon " >
                                <a href="/admin/productimagedelete?productId=<%= products._id %>&imageIndex=3" class="text-muted"> <i class="fa fa-close " aria-hidden="true"></i>Delete</a>

                              
                            </label>
                        </div>
                        <input id="fileInput4" class="form-control hidden" name="image4"  type="file" onchange="viewImage(event,3)" value="<%= products.productImages[3] %>">
                    </div>
                        <br>

                        

                        
                
                    </div>
                    
                    
                </div>
                <div class="col-lg-6">
         
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="my-4">Product Info</h5><br>
                            <div class="mb-4">
                                <div class="  mb-4">
                                <label for="product_title" class="form-label">Product title</label>
                                <input type="text" placeholder="Type here" class="form-control" name="name"  value="<%= products.name %>" r>
                            </div>
                        </div>
                            <div class="mb-4">
                               
                                <div class="  mb-4">
                                    <label for="product_size" class="form-label">Quanity</label>
                                    <input type="number" placeholder="Type here" class="form-control" name="quantity"  value="<%= products.quantity %>" >
                                </div>
                            </div>
                          
                            <div class="mb-3">
                                <label for="product_brand" class="form-label">product Color</label>
                                <input type="text" placeholder="Type here" class="form-control" name="productColor"  value="<%= products.productColor%>" >
                            </div>
                        </div>
                    </div> <!-- card end// -->


                </div>
            
                <div class="col-lg-6">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="mb-4">
                                <label class="form-label">Price</label>
                                <input type="number" placeholder="Type here" class="form-control" name="price" value="<%= products.price %>" >
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Discount Price</label>
                                <input type="number" placeholder="Type here" class="form-control" name="discountPrice" value="<%= products.discountPrice %>" >
                            </div>
                          
              
                            <hr>
                            <h5 class="mb-3">Categories</h5>
                            <% if (category && category.length > 0) { %>
                                <div class="form-group">
                                  <% for (let i = 0; i < category.length; i++) { %>
                                    <div class="form-check">
                                      <input class="form-check-input" name="category" type="radio" value="<%= category[i].category %>" id="category<%= i %>"
                                        <% if (category[i].category === products.category) { %>checked<% } %>>
                                      <label class="form-check-label" for="category<%= i %>"><%= category[i].category %></label>
                                    </div>
                                  <% } %>
                                </div>
                              <% } %>
                    
                         
                        </div>
                    </div> <!-- card end// -->
                </div>
            </div>
            <div class="row">
                <div class="col-lg">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="my-2">Product Specifications</h5>
                        
                        <div class="row gx-3 ">
                            <div class="  mb-3  col-lg-6">
                                <label for="product_title" class="form-label">Battery</label>
                                <input type="text" placeholder="Type here" class="form-control" name="battery" value="<%= products.battery %>" >
                            </div>
                           
                            <div class="  mb-3  col-lg-6">
                                <label for="product_size" class="form-label">Ram</label>
                                <input type="text" placeholder="Type here" class="form-control" name="ram" value="" >
                            </div>
                        </div>
                         
                        <div class="row gx-3 ">
                            <div class="  mb-3  col-lg-6">
                                <label for="product_title" class="form-label">Rom</label>
                                <input type="text" placeholder="Type here" class="form-control" name="rom" value="" >
                            </div>
                           
                            <div class="  mb-3  col-lg-6">
                                <label for="product_size" class="form-label">Expandable</label>
                                <input type="text" placeholder="Type here" class="form-control" name="expandable" value="" >
                            </div>
                        </div>
                         
                        <div class="row gx-3 ">
                            <div class="  mb-3  col-lg-6">
                                <label for="product_title" class="form-label">RearCam</label>
                                <input type="text" placeholder="Type here" class="form-control" name="rearCam" value="<%= products.rearCam %>" >
                            </div>
                           
                            <div class="  mb-3  col-lg-6">
                                <label for="product_size" class="form-label">FrontCam</label>
                                <input type="text" placeholder="Type here" class="form-control" name="frontCam" value="<%= products.frontCam %>" >
                            </div>
                        </div>
                      
                        <div class="mb-4">
                            <label for="product_brand" class="form-label">Processor</label>
                            <input type="text" placeholder="Type here" class="form-control" name="processor" value="<%= products.processor %>" >
                        </div>
                    </div>
                </div> <!-- card end// -->
            </div>
        </div>
            <div>


    
                           
                <button type="submit" class="btn btn-md rounded font-sm hover-up">Apply changes</button>
            </div>
        </form>
        </section>
        <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
                <div class="col-sm-6">
                    <script>
                    document.write(new Date().getFullYear())
                    </script> Â©, Evara - HTML Ecommerce Template .
                </div>
                <div class="col-sm-6">
                    <div class="text-sm-end">
                        All rights reserved
                    </div>
                </div>
            </div>
        </footer>
        <style>
            .edit-icon {
    cursor: pointer;
    color: rgb(73, 155, 255); /* Change the color to your preference */
   
    display: inline-block;
    margin-top: 5px; /* Adjust the margin as needed */
}

.hidden {
    display: none;
}

        </style>
    </main>
    <script src="assetsB/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="assetsB/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="assetsB/js/vendors/select2.min.js"></script>
    <script src="assetsB/js/vendors/perfect-scrollbar.js"></script>
    <script src="assetsB/js/vendors/jquery.fullscreen.min.js"></script>
    <script src="assetsB/js/vendors/chart.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Main Script -->
    <script src="assetsB/js/main.js" type="text/javascript"></script>
    <script src="assetsB/js/custom-chart.js" type="text/javascript"></script>
</body>
<script>
    function viewImage(event, imageIndex) {
    const imgView = document.getElementById(`imgView${imageIndex}`);
    imgView.src = URL.createObjectURL(event.target.files[0]);
}

</script>


</html>
